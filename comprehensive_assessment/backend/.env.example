# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=eval_user
DB_PASSWORD=eval_password123
DB_NAME=evaluation_system

# JWT配置
JWT_SECRET=eval-system-secret-key

# 阿里云短信服务配置
# 请在阿里云控制台申请以下信息：
# 1. 访问控制 RAM > 用户管理 > 创建用户 > 获取 AccessKey
# 2. 短信服务 > 签名管理 > 申请签名
# 3. 短信服务 > 模板管理 > 申请模板

# 阿里云AccessKey (请替换为您的真实值)
ALIYUN_ACCESS_KEY_ID=your_access_key_id_here
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret_here

# 短信签名 (请替换为您申请的签名)
SMS_SIGN_NAME=综合测评系统

# 短信模板CODE (请替换为您申请的模板CODE)
# 绑定手机号模板，如：您的验证码是${code}，请在5分钟内完成验证
SMS_BIND_TEMPLATE=SMS_XXXXXX

# 重置密码模板，如：您的密码重置验证码是${code}，请在5分钟内完成验证
SMS_RESET_TEMPLATE=SMS_XXXXXX

# 开发环境设置
NODE_ENV=development
